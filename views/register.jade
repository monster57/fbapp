extends layout

block content
  .container#rootDiv
    h2.page-header Register
    ul.errors
    if errors
      each error, i in errors
        div.alert.alert-danger #{error.msg}
    form(method="post", action="/users/register", enctype="multipart/form-data")
      .form-group
        label Name
        input.form-control(name="name" , type="text", placeholder="Enter Name" required)
      .form-group
        label Email
        input.form-control(name="email" , type="email", placeholder="Enter email" required)
      .form-group
        label Password
        input.form-control(name="password" , type="password", placeholder="Enter password" required)
      .form-group
        label Confirm Password
        input.form-control(name="password2" , type="password", placeholder="Confirm password" required)
      .form-group
        label Profile Image
        input.form-control(name="profileimage" , type="file" required)
      input.btn.btn-primary(type="submit", name="submit", value="Register")