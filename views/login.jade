extends layout

block content
  .container#rootDiv
    h2.page-header Login
    form(method="post", action="/users/login")
      .form-group
        label Email
        input.form-control(name="username" , type="text", placeholder="Enter Email" , required)
      .form-group
        label Password
        input.form-control(name="password" , type="password", placeholder="Enter password" , required)
      input.btn.btn-primary(type="submit", name="submit", value="Login")