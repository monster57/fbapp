extends layout

block content
  .container
    .row
      h3
        b My Projects
        hr
      if projects
        for project in projects
          .col.s12.m6.l3
            .card.small
              a(href='/project/#{project._id}')
                .card-image.waves-effect.waves-block.waves-light
                  img.activator(src="#{project.cover_image ? project.cover_image : 'https://placeholdit.imgix.net/~text?txtsize=33&txt=No%20cover%20image&w=250&h=250'}")
                .card-content
                  span.card-title.activator.grey-text.text-darken-4
                    | #{project.title}
      else
        h4 You have no projects, add one!